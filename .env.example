# Server Port (default: 5000)
PORT=5000

# MongoDB Connection String
# Get a free database at: https://www.mongodb.com/atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/fastivalle

# JWT (JSON Web Token) Settings
# Generate a random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=30d

# Optional: Google Sign-In (for server-side token verification)
# Get from: https://console.cloud.google.com/apis/credentials
# Use the same Client ID as your iOS/Android app
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Optional: Apple Sign-In (for server-side token verification)
# Use your Services ID (e.g. com.yourapp.service) from Apple Developer
# APPLE_CLIENT_ID=com.yourapp.service
