# Server Port (default: 5000)
PORT=5000

# MongoDB Connection String
# Get a free database at: https://www.mongodb.com/atlas
# Format: mongodb+srv://<username>:<password>@<cluster>.mongodb.net/<database>?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/fastivalle

# JWT (JSON Web Token) Settings
# Generate a random secret: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this
JWT_EXPIRES_IN=30d

# Firebase (recommended for Google Sign-In - app sends Firebase idToken)
# Option A: path to service account JSON file
# GOOGLE_APPLICATION_CREDENTIALS=./service-account.json
# Option B: inline credentials (no file) - base64-encoded JSON. Generate with:
#   cat service-account.json | base64 | tr -d '\n'
# Then set (use quotes if value contains =):
# GOOGLE_APPLICATION_CREDENTIALS="eyJ0eXBlIjoic2VydmljZV9hY2NvdW50Ii..."
# Option C: or set project ID if using default credentials
# FIREBASE_PROJECT_ID=your-firebase-project-id

# Optional: raw Google idToken verification (fallback when not using Firebase)
# GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com

# Apple Sign-In (for server-side identityToken verification)
# Use your iOS app bundle ID (audience in Apple's JWT)
# APPLE_CLIENT_ID=com.fastivalle.fastivalle-app
